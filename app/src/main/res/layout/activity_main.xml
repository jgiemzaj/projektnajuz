<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/holo_blue_dark"
    tools:context="com.example.justyna.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:text="Zabrze"
        android:id="@+id/miasto"
        android:layout_gravity="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
                 />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="81dp"
        android:src="@drawable/ic_wb_sunny_black_24dp"
        android:layout_gravity="center"
        android:layout_height="72dp"  />


    <TextView
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_width="127dp"
        android:layout_height="28dp"
        android:text="30 stopni Celcjusza"
        />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:text="Pamiętaj o filtrze"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:layout_gravity="center"
        android:text="Podaj miejsce:"
        />
    <EditText
        android:id="@+id/wpisztekst"
        android:layout_width="353dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:inputType="textPersonName"

        />


    <Button
        android:id="@+id/button_zm_miejsce"
        android:layout_gravity="center"
        android:layout_width="256dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:="8dp"
        android:layout_marginTop="16dp"
        android:text="ZMIEŃ MIEJSCE"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/button_pokaz_liste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_pokaz_liste"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center"

        android:text="POKAŻ LISTĘ DOSTĘPNYCH MIEJSC"
        android:textColor="@android:color/holo_blue_dark"
        />
</LinearLayout>


</android.support.constraint.ConstraintLayout>
